{
  "name": "website",
  "version": "1.0.0",
  "description": "Smooth Code website.",
  "private": true,
  "main": "index.js",
  "repository": "git@github.com:smooth-code/website.git",
  "author": "Greg Berg√© <berge.greg@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "yarn build:server && yarn build:client",
    "build:server": "rm -rf lib/ && cp -R src/ lib/ && babel -d lib src",
    "build:client": "rm -rf public/dist && webpack",
    "build-storybook": "build-storybook",
    "ci": "yarn lint && NODE_ENV=test yarn db:load && yarn test",
    "db:check-structure": "knex-scripts check-structure",
    "db:create": "knex-scripts create",
    "db:drop": "knex-scripts drop",
    "db:dump": "yarn db:migrate && knex-scripts dump",
    "db:load": "knex-scripts load",
    "db:seed": "babel-node node_modules/.bin/knex seed:run",
    "db:truncate": "knex-scripts truncate",
    "db:migrate": "knex migrate:latest",
    "db:rollback": "knex migrate:rollback",
    "dev:client": "webpack-dev-server",
    "dev:server": "nodemon --watch src src/server/main.js",
    "format": "prettier --write src/**/*.js *.js",
    "heroku-postbuild": "yarn build && yarn db:migrate",
    "generate-pdf": "NODE_ENV=production DATABASE_URL=$PRODUCTION_DATABASE_URL babel-node scripts/generatePdf.js",
    "lint": "eslint .",
    "test:unit": "jest --runInBand"
  },
  "engines": {
    "node": "9"
  },
  "dependencies": {
    "apollo-cache-inmemory": "^1.2.1",
    "apollo-client": "^2.3.1",
