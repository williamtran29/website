    "convict": "^4.2.0",
    "dom-helpers": "^3.3.1",
    "email-validator": "^2.0.3",
    "eslint-config-smooth": "^1.1.1",
    "express": "^4.16.3",
    "final-form": "^4.6.1",
    "graphql": "^0.13.2",
    "graphql-fields": "^1.0.2",
    "graphql-iso-date": "^3.5.0",
