  },
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "modulePaths": [
      "<rootDir>/src"
    ],
    "coverageDirectory": "./coverage/",
    "setupFiles": [
      "raf/polyfill",
      "<rootDir>/src/test/setup.js"
    ]
  }
}
