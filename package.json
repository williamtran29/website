{
  "name": "website",
  "version": "1.0.0",
  "description": "Smooth Code website.",
  "main": "index.js",
  "repository": "git@github.com:smooth-code/website.git",
  "author": "Greg Berg√© <berge.greg@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "yarn build:server && yarn build:client",
    "build:server": "rm -rf lib/ && cp -R src/ lib/ && babel -d lib src",
    "build:client": "rm -rf public/dist && webpack",
    "build-storybook": "build-storybook",
    "ci": "yarn lint && NODE_ENV=test yarn db:load && yarn test -- --coverage && codecov",
    "db:console": "docker-compose run postgres psql --host postgres --username postgres",
    "db:create": "babel-node scripts/db/create.js",
    "db:drop": "babel-node scripts/db/drop.js",
    "db:dump": "babel-node scripts/db/dump.js",
    "db:load": "babel-node scripts/db/load.js",
    "db:migrate": "babel-node node_modules/.bin/knex migrate:latest",
    "db:rollback": "babel-node node_modules/.bin/knex migrate:rollback",
    "db:truncate": "babel-node scripts/db/truncate.js",
    "db:seed": "babel-node node_modules/.bin/knex seed:run",
    "db:reset": "yarn db:drop && yarn db:create && yarn db:load",
    "dev:client": "webpack-dev-server",
    "dev:server": "nodemon src/server/main.js",
    "format": "prettier --write --single-quote --no-semi --trailing-comma all src/**/*.js *.js",
    "heroku-postbuild": "yarn build && yarn db:migrate",
    "lint": "eslint .",
    "storybook": "start-storybook -p 6006",
    "test": "jest"
  },
  "engines": {
    "node": "8.0.0"
  },
  "dependencies": {
    "apollo-local-query": "^0.3.0",
    "assets-webpack-plugin": "^3.5.1",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-loader": "^7.0.0",
    "babel-plugin-lodash": "^3.2.11",
    "babel-plugin-module-resolver": "^2.7.1",
    "babel-plugin-syntax-trailing-function-commas": "^6.22.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-env": "^1.5.1",
    "babel-preset-react": "^6.24.1",
    "classnames": "^2.2.5",
    "compression-webpack-plugin": "^0.4.0",
    "convict": "^3.0.0",
    "dom-helpers": "^3.2.1",
    "eslint": "^3.19.0",
    "extract-text-webpack-plugin": "^2.1.0",
    "graphql": "^0.10.1",
    "graphql-server-koa": "^0.8.0",
    "iltorb": "^1.3.1",
    "knex": "^0.13.0",
    "koa": "^2.2.0",
    "koa-basic-auth": "^2.0.0",
    "koa-bodyparser": "^4.2.0",
    "koa-compress": "^2.0.0",
    "koa-error": "^3.0.1",
    "koa-etag": "^3.0.0",
    "koa-favicon": "^2.0.0",
    "koa-morgan": "^1.0.1",
    "koa-mount": "^3.0.0",
    "koa-router": "^7.2.0",
    "koa-static": "^3.0.0",
    "lodash": "^4.17.4",
    "mz": "^2.6.0",
    "objection": "^0.8.1",
    "pg": "^6.2.3",
    "polished": "^1.1.3",
    "prop-types": "^15.5.10",
    "react": "^15.5.4",
    "react-apollo": "^1.4.1",
    "react-dom": "^15.5.4",
    "react-helmet": "^5.1.3",
    "react-hot-loader": "next",
    "react-icons": "^2.2.5",
    "react-redux": "^5.0.5",
    "react-redux-form": "^1.11.2",
    "react-router": "^4.1.1",
    "react-router-dom": "^4.1.1",
    "recompact": "^3.0.2",
    "redux": "^3.6.0",
    "redux-thunk": "^2.2.0",
    "regenerator-runtime": "^0.10.5",
    "sendgrid": "^5.1.1",
    "styled-components": "^2.0.0",
    "webpack": "^2.6.1"
  },
  "devDependencies": {
    "@storybook/react": "^3.0.0",
    "babel-eslint": "^7.2.3",
    "codecov": "^2.2.0",
    "enzyme": "^2.8.2",
    "enzyme-to-json": "^1.5.1",
    "eslint-config-airbnb": "^15.0.1",
    "eslint-config-prettier": "^2.1.1",
    "eslint-plugin-import": "^2.3.0",
    "eslint-plugin-jsx-a11y": "^5.0.3",
    "eslint-plugin-react": "^7.0.1",
    "jest": "^20.0.4",
    "jest-glamor-react": "^1.4.0",
    "nock": "^9.0.13",
    "nodemon": "^1.11.0",
    "prettier": "^1.4.2",
    "react-addons-test-utils": "^15.5.1",
    "react-test-renderer": "^15.5.4",
    "supertest": "^3.0.0",
    "webpack-dev-server": "^2.4.5"
  },
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "modulePaths": [
      "<rootDir>/src"
    ],
    "coverageDirectory": "./coverage/"
  }
}
